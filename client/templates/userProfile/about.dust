        <div class="col-xs-12">
            <h5>About Me</h5>
            <p>{user.aboutMe}</p>
        </div>
    </div>
    <div class="row hidden-md hidden-lg hidden-xl" style="display: inline">
        <h5>FOLLOWERS : {followers}</h5>
        <h5>FOLLOWING : {following}</h5>
    </div>
    <div class="row hidden-lg hidden-md aboutme-socialmedia">
