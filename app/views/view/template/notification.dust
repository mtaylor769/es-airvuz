<!DOCTYPE html>
<html view="app.views.view.template.notification">
<head>
    <meta http-equiv="Cache-control" content="public">
    <title>Notifications</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/client/favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="{script.css}">
</head>
<body>
    {> "app.views.view.partial.header" /}
    <div id="notifications">
        <div class="container main">
            {#notifications}
                <div class="notification row flex" style="padding: 15px; font-size: 13px; border-bottom: inset">
                    {#actionUserId.profilePicture}
                        {#actionUserId.isExternalProfilePicture}
                          <img src="{actionUserId.profilePicture}" height="50" width="50" class="img-circle">
                        {:else}
                          <img src="{s3AssetUrl}users/profile-pictures{actionUserId.profilePicture}" height="50" width="50" class="img-circle">
                        {/actionUserId.isExternalProfilePicture}
                    {:else}
                      <img src="/client/images/default.png" height="50" width="50" class="img-circle">
                    {/actionUserId.profilePicture}

                    {@eq key=actionUserId.userNameDisplay value="Someone" }
                        <p style="margin: 10px">{actionUserId.userNameDisplay} {notificationMessage|s}</p>
                    {:else}
                        <p style="margin: 10px"><a href="/user/{actionUserId.userNameUrl}">{actionUserId.userNameDisplay}</a> {notificationMessage|s}</p>
                    {/eq}
                </div>
            {:else}
                <br>
                <div class="alert alert-info text-center">
                  No notifications
                </div>
            {/notifications}
        </div>
    </div>
    {> "app.views.view.partial.footer" /}
    {> "app.views.view.partial.js" /}
</body>

</html>
