<!DOCTYPE html>
<html view="app.views.view.template.category">
    <head>
        <meta http-equiv="Cache-control" content="public">
        <title>{title}</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="icon" href="/client/favicon.ico" type="image/x-icon">
        {>  "app.views.view.partial.css" /}
    </head>
    <body>
        {> "app.views.view.partial.header" /}

        <div id="category-page" class="container main">
          <div class="row">
            <div class="col-md-2" id="left-category">
                {> "app.views.view.partial.left-nav"/}
            </div>
            <div class="col-md-10 border-left">
              <div class="row">
                <div class="col-md-12">
                  <h3>{category}</h3>
                </div>
              </div>
              <div class="row" id="videos">
                <div class="col-md-12">
                    {#videos}
                      <div class="col-md-3 col-sm-6">
                        <div class="video">
                          <div class="text-center">
                            <a href="/videoPlayer/{_id}">
                              <img src="//s3-us-west-2.amazonaws.com/airvuz-drone-video/{thumbnailPath}" alt="{title}" class="img-responsive"/>
                            </a>
                          </div>
                          <div class="video-bottom">
                            <p><span class="airvuz-blue">VÅªZ</span> {viewCount} <span class="pull-right">{duration}</span></p>
                            <div class="title">
                              <h4>
                                <a href="/videoPlayer/{_id}">{title}</a>
                              </h4>
                              <p>By <a href="/userProfile/{userId.userName}">{userId.userName}</a></p>
                            </div>
                            <a href="#">{categories[0].name}</a>
                          </div>
                        </div>
                      </div>
                    {/videos}
                </div>
              </div>
                {#showLoadMore}
                  <div class="row">
                    <div class="col-md-12 m-b-20">
                      <hr/>
                      <div class="text-center">
                        <button class="btn btn-primary" id="load-more-btn">Load more videos</button>
                      </div>
                    </div>
                  </div>
                {/showLoadMore}
            </div>
          </div>


        </div>

        {> "app.views.view.partial.footer" /}
        {> "app.views.view.partial.cdn-js" /}
        {> "app.views.view.partial.js" /}
        <script>
          $(function () {
              Category.initialize();
          });
        </script>
    </body>

</html>
