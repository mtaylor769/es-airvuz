<!DOCTYPE html>
<html view="app.views.view.template.category">
    <head>
        <meta http-equiv="Cache-control" content="public">
        <title>{title}</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="icon" href="/client/favicon.ico" type="image/x-icon">
        <link rel="stylesheet" href="/public/{airvuz.css}">
    </head>
    <body>
        {> "app.views.view.partial.header" /}

        <div id="category-page" class="container main">
          <div class="row">
            <div class="col-md-2 category-nav">
                {> "app.views.view.partial.left-nav"/}
            </div>
            <div class="col-md-10 border-left">
              <div class="row">
                <div class="col-sm-6">
                  <h3>{category.name}</h3>
                </div>
                {#showSort}
                <div class="col-sm-6">
                  <div class="form-inline" id="category-sort">
                    <label for="category-sort-select">Sort By</label>
                    <select class="form-control" id="category-sort-select">
                      <option value="uploadDate">Date</option>
                      <option value="viewCount">VÅ«z</option>
                      <option value="commentCount">Comment</option>
                    </select>
                  </div>
                </div>
                {/showSort}

              </div>
              <div class="row" id="videos">
                <div class="col-md-12">
                    {> "client.templates.category.category-video"/}
                </div>
              </div>
                {#showLoadMore}
                  <div class="row">
                    <div class="col-md-12 m-b-20">
                      <hr/>
                      <div class="text-center">
                        <button class="btn btn-primary" id="load-more-btn">Load more videos</button>
                      </div>
                    </div>
                  </div>
                {/showLoadMore}
            </div>
          </div>


        </div>

        {> "app.views.view.partial.footer" /}
        {> "app.views.view.partial.js" /}
        <script>
          $(function () {
              Category.initialize('{category.uri}');
          });
        </script>
    </body>

</html>
