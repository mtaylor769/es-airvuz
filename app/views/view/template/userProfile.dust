<!DOCTYPE html>
<html view="app.views.view.template.userProfile">
  <head>
    <meta http-equiv="Cache-control" content="public">
    <title>{data.userProfile.title}</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {> "app.views.view.partial.css" /}
  </head>
  <body>
    {> "app.views.view.partial.header" /}
    <div id="user-profile" class="container main">
      <div class="row">
        <section>
          <img src="http://airvuz.com{user.profilePicture}" class="img-responsive">
            <div class="profile">
              <figure class="profile-picture col-md-2">
                <img src="http://airvuz.com/{user.coverPicture}" width="150px" height="150px" class="">
              </figure>
              <figcaption class="profile-information col-md-10">
                <div class="profile-username row">Zeke Thao</div>
                <div class="location row">Minneapolis, MN</div>
                <div class="row">
                  <span class="av-primary">300 </span><span>Followers</span>
                </div>
                <div class="row">
                  <span class="av-primary">299</span><span>Following</span>
                </div>
                <div class="join-date row">Member since November 2015</div>
                <div class="profile-about row">About stuff goes here.</div>
                <!-- This stuff displays only if not your profile -->
                <div class="profile-options btn-group inline row" role="group">
                <!-- Switch button depending if followed or unfollowed -->
                  <button class="btn btn-default" type="button">Follow</button>
                  <button class="btn btn-default" type="button">Donate</button>
                  <button class="btn btn-default" type="button">Hire</button>
                </div>
                <div class="inline pull-right row">
                  <!-- Conditional only if user has social media links -->
                  <a href="/">Facebook</a>
                  <a href="/">Instagram</a>
                  <a href="/">Twitter</a>
                  <a href="/">Google+</a>
                </div>
              </figcaption>
            </div>
          </img>
        </section>
      </div>
      <div class="clearfix"></div>
      <div class="row">
        <section class="video-list">
          <div class="video-sort row">
            <div class="pull-left">
              <select name="sort-by" id="video-sorter" class="video-sort-control">
              <option value="name">Name</option>
              <option value="vuz">Vuz</option>
              <option value="likes">Likes</option>
              </select>
            </div>
            <div class="pull-right">
              <button class="btn btn-default" type="button">EDIT SHOWCASE</button>
            </div>
          </div>
          <div class="clearfix"></div>
          {#videos}
          <div class="video col-md-4">
            <div class="video-thumbnail">
              <img src="//s3-us-west-2.amazonaws.com/airvuz-drone-video/{video.thumbnailPath}" alt="thumbnail" class="vid-thumb">
            </div>
            <div class="row inline">
              <div class="video-views pull-left">
                <span>2,882</span>&nbsp;<span>Views</span>
              </div>
              <div class="video-length pull-right">
                <span>2:27</span>
              </div>
            </div>
            <div class="row">
              <h3>Video Title</h3>
              <div>
                <span class="video-about">Video details go here</span>
              </div>
            </div>
            <div class="row">
              <div class="video-likes inline pull-left">
                <span>8</span>&nbsp;<span>LIKES</span>
              </div>
              <div class="video-comments inline pull-right">
                <span>10</span>&nbsp;<span>COMMENTS</span>
              </div>
            </div>
          </div>
          {/videos}
        </section>
      </div>
    </div>
    {> "app.views.view.partial.footer" /}
    {> "app.views.view.partial.cdn-js" /}
    {> "app.views.view.partial.js" /}
  </body>
</html>
