<!DOCTYPE html>
<html view="app.views.view.template.userProfile">
  <head>
    <meta http-equiv="Cache-control" content="public">
    <title>AirVÅ«z - {user.userName}</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/client/favicon.ico" type="image/x-icon">
    <link href="/client/lib/bootstrap-switch/dist/css/bootstrap3/bootstrap-switch.min.css" rel="stylesheet">
      {> "app.views.view.partial.css" /}
  </head>
  <body>
    {> "app.views.view.partial.header" /}
    <div id="user-profile" class="container main profile">
      <div class="row">
        <section style="color: white; background: #fff url('http://airvuz.com/{user.profilePicture}') no-repeat center; background-size: cover; min-height: 300px">
            <div class="">
              <figure class="profile-picture col-xs-12 col-md-3">
                <img src="http://airvuz.com{user.coverPicture}" width="120px" height="120px" class="border-radius-circle">
              </figure>
              <figcaption class="profile-information col-xs-12 col-md-9">
                <h4 class="profile-username row">{user.userName}</h4>
                <h5 class="row">
                  <span class="av-primary word-space airvuz-blue">300</span><span class="profile-space" style="text-shadow: 2px 2px 22px black">Followers</span>
                  <span class="av-primary word-space airvuz-blue">299</span><span style="text-shadow: 2px 2px 22px black">Following</span>
                </h5>
                <div class="hidden-xs hidden-sm" style="text-shadow: 2px 2px 22px black; margin: 2% 0">
                    <span>{user.aboutMe}</span>
                </div>
                <!-- This stuff displays only if not your profile -->
                <div class="profile-options row" role="group">
                <!-- Switch button depending if followed or unfollowed -->
                  <button class="follow-btn btn btn-primary" type="button">Follow</button>
                  {?user.allowDonation}<button class="donate-btn btn btn-primary" type="button">Donate</button>{/user.allowDonation}
                  
                  {?user.allowHire}<button class="hire-btn btn btn-primary" type="button">Hire</button>{/user.allowHire}
                  
                  <div class="user-social-media pull-right row hidden-xs hidden-sm">
                  <!-- Conditional only if user has social media links -->
                    {?user.socialMediaLinks.facebookUrl}
                      <span class="fa fa-facebook-square" style="margin-right: 10px"></span>
                    {/user.socialMediaLinks.facebookUrl}
                    {?user.socialMediaLinks.instagramUrl}
                      <span class="fa fa-instagram" style="margin-right: 10px"></span>
                    {/user.socialMediaLinks.instagramUrl}
                    {?user.socialMediaLinks.twitterUrl}
                      <span class="font-white fa fa-twitter-square" style="margin-right: 10px"></span>
                    {/user.socialMediaLinks.twitterUrl}
                    {?user.socialMediaLinks.googlePlusUrl}
                      <span class="font-white fa fa-google-plus-square"></span>
                    {/user.socialMediaLinks.googlePlusUrl}
                  </div>
                </div>
              </figcaption>
            </div>
          </img>
        </section>
      </div>
      {> "client.templates.userProfile.userProfileModal" /}
      <div class="row m-t-15">
          <ul class="nav nav-tabs" role="tablist">
              <li role="presentation" class="active"><a href="#showcase" id="showcase-tab" role="tab" data-toggle="tab">SHOWCASE</a></li>
              <li role="presentation"><a href="#allvideos" role="tab" data-toggle="tab">ALL VIDEOS</a></li>
              <li role="presentation" class="hidden-md hidden-lg"><a href="#about" role="tab" data-toggle="tab">ABOUT</a></li>
              <li role="presentation"><a href="#edit-profile" role="tab" data-toggle="tab">EDIT</a></li>
          </ul>
      </div>
      <div class="tab-content">
          <div role="tabpanel" class="tab-pane active" id="showcase">{> "client.templates.userProfile.showcase-user" /}</div>
          <div role="tabpanel" class="tab-pane" id="allvideos">{> "client.templates.userProfile.allvideos-user" /}</div>
          <div role="tabpanel" class="tab-pane hidden-md hidden-lg" id="about">{> "client.templates.userProfile.about" /}</div>
          <div role="tabpanel" class="tab-pane" id="edit-profile">{> "client.templates.userProfile.edit-profile" /}</div>
      </div>
    </div>
    {> "app.views.view.partial.footer" /}
    {> "app.views.view.partial.cdn-js" /}
    <script src="/client/lib/bootstrap-switch/dist/js/bootstrap-switch.min.js"></script>
    {> "app.views.view.partial.js" /}
    <script>
        var profileUser = {user|js|s};
        var profileVideos = {videos|js|s};
        $(function() {
            userProfile.initialize();
        });
    </script>
  </body>
</html>
