<!DOCTYPE html>
<html view="app.views.view.template.userProfile">
  <head>
    <meta http-equiv="Cache-control" content="public">
    <title>AirVÅ«z - {user.userName}</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/client/favicon.ico" type="image/x-icon">
    <link href="/client/lib/bootstrap-switch/dist/css/bootstrap3/bootstrap-switch.min.css" rel="stylesheet">
      {> "app.views.view.partial.css" /}
  </head>
  <body>
    {> "app.views.view.partial.header" /}
    <div id="user-profile" class="container main profile">
      <div id="userInfoData" class="row">
        {> "client.templates.userProfile.user-info" /}
      </div>
      <div class="row m-t-15">
          <ul class="nav nav-tabs" role="tablist">
              <li role="presentation" class="active"><a href="#allvideos" role="tab" data-toggle="tab">ALL VIDEOS</a></li>
              <li role="presentation"><a href="#showcase" id="showcase-tab" role="tab" data-toggle="tab">SHOWCASE</a></li>
              <li role="presentation" class="hidden-md hidden-lg"><a href="#about" role="tab" data-toggle="tab">ABOUT</a></li>
              <li role="presentation"><a href="#edit-profile" role="tab" data-toggle="tab" class="edit-tab">EDIT</a></li>
          </ul>
      </div>
      <div class="tab-content">
          <div role="tabpanel" class="tab-pane" id="showcase">{> "client.templates.userProfile.showcase-user" /}</div>
          <div role="tabpanel" class="tab-pane active" id="allvideos">{> "client.templates.userProfile.allvideos-user" /}</div>
          <div role="tabpanel" class="tab-pane hidden-md hidden-lg" id="about">{> "client.templates.userProfile.about" /}</div>
          <div role="tabpanel" class="tab-pane" id="edit-profile">{> "client.templates.userProfile.edit-profile" /}</div>
      </div>
    </div>
    {> "app.views.view.partial.footer" /}
    {> "client.templates.userProfile.user-profile-modal" /}
    {> "app.views.view.partial.cdn-js" /}
    <script src="/client/lib/bootstrap-switch/dist/js/bootstrap-switch.min.js"></script>
    {> "app.views.view.partial.js" /}
    <script>
        /** global page **/
        var Page = {};
        Page.categories = {categories|js|s};

        var profileUser = {user|js|s};
        var profileVideos = {videos|js|s};
        $(function() {
            userProfile.initialize();
        });
    </script>
  </body>
</html>
