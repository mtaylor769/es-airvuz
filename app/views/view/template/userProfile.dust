<!DOCTYPE html>
<html view="app.views.view.template.userProfile">
  <head>
    <meta http-equiv="Cache-control" content="public">
    <title>{data.userProfile.title}</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {> "app.views.view.partial.css" /}
  </head>
  <body>
    {> "app.views.view.partial.header" /}
    <div id="user-profile" class="container main profile">
      <div class="row" style="margin-bottom: 100px;">
        <section style="color: white; background: #fff url('http://airvuz.com/{user.profilePicture}') no-repeat center; min-height: 300px">
            <div class="">
              <figure class="profile-picture col-xs-12 col-md-4"  style="text-align: center; margin-top: 5%">
                <img src="http://airvuz.com{user.coverPicture}" width="120px" height="120px" class="border-radius-circle">
              </figure>
              <figcaption class="profile-information col-xs-12 col-md-8">
                <h4 class="profile-username row">{user.userName}</h4>
                <h5 class="row">
                  <span class="av-primary">300</span><span>Followers</span>
                  <span class="av-primary">299</span><span>Following</span>
                </h5>
                <!-- This stuff displays only if not your profile -->
                <div class="profile-options row" role="group">
                <!-- Switch button depending if followed or unfollowed -->
                  <button class="btn btn-default" type="button">Follow</button>
                  <button class="btn btn-default" type="button">Donate</button>
                  <button class="btn btn-default" type="button">Hire</button>
                </div>
                <div class="mobile-display-none pull-right row">
                  <!-- Conditional only if user has social media links -->
                  <a href="/">Facebook</a>
                  <a href="/">Instagram</a>
                  <a href="/">Twitter</a>
                  <a href="/">Google+</a>
                </div>
              </figcaption>
            </div>
          </img>
        </section>
      </div>
      {!<div class="clearfix"></div>!}
      {!<div class="row">!}
        {!<section class="video-list">!}
          {!<div class="video-sort row">!}
            {!<div class="pull-left">!}
              {!<select name="sort-by" id="video-sorter" class="video-sort-control">!}
              {!<option value="name">Name</option>!}
              {!<option value="vuz">Vuz</option>!}
              {!<option value="likes">Likes</option>!}
              {!</select>!}
            {!</div>!}
            {!<div class="pull-right">!}
              {!<button class="btn btn-default" type="button">EDIT SHOWCASE</button>!}
            {!</div>!}
          {!</div>!}
          {!<div class="clearfix"></div>!}
          {!<div class="row">!}
            {!{#videos}!}
            {!<div class="video col-sm-4">!}
              {!<div class="video-thumbnail">!}
                {!<img src="//s3-us-west-2.amazonaws.com/airvuz-drone-video/{thumbnailPath}" alt="thumbnail" class="vid-thumb">!}
              {!</div>!}
              {!<div class="video-bottom">!}
                {!<div class="row">!}
                  {!<div class="col-xs-6">!}
                    {!<span>{viewCount}</span>&nbsp;<span>Views</span>!}
                  {!</div>!}
                  {!<div class="col-xs-6">!}
                    {!<span class="pull-right">{duration}</span>!}
                  {!</div>!}
                {!</div>!}
                {!<div class="row" style="margin-bottom: 10px">!}
                  {!<h4>{title}</h4>!}
                  {!<div style="height: 31px">!}
                    {!<span class="video-about">{description}</span>!}
                  {!</div>!}
                {!</div>!}
                {!<div class="row">!}
                  {!<div class="col-xs-2">!}
                    {!<span>{likeCount}</span>&nbsp;<span>LIKES</span>!}
                  {!</div>!}
                  {!<div class=" col-xs-6">!}
                    {!<span>{commentCount}</span>&nbsp;<span>COMMENTS</span>!}
                  {!</div>!}
                {!</div>!}
              {!</div>!}
            {!</div>!}
            {!{/videos}!}
          {!</div>!}
        {!</section>!}
      {!</div>!}
    </div>
    {> "app.views.view.partial.footer" /}
    {> "app.views.view.partial.cdn-js" /}
    {> "app.views.view.partial.js" /}
  </body>
</html>
