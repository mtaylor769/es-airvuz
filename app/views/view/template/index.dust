<!DOCTYPE html>
<html view="app.views.view.template.index">
  <head>
        <meta http-equiv="Cache-control" content="public">

        <title>{index.head.title}</title>

        <!-- BEGIN: OG -->
        <meta property="og:url" content="{index.head.og.url}"/>
        <meta property="og:type" content="{index.head.og.type}" >
        <meta property="og:title" content="{index.head.og.title}" >
        <meta property="og:updated_time" content="{index.head.og.updated_time}">
        <meta property="og:description" content="{index.head.og.description}" >
        <meta property="og:image" content="{index.head.og.image}" >
        <meta property="fb:app_id" content="{index.fb.app_id}">
        <!-- END: OG -->

        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="icon" href="/client/favicon.ico" type="image/x-icon">
        <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/jquery.slick/1.5.9/slick.css"/>
        <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/jquery.slick/1.5.9/slick-theme.css"/>

        {> "app.views.view.partial.css" /}
  </head>
  <body>
  
    {> "app.views.view.partial.header" /}

    <!-- BEG:Main Container -->
    <div id="home-page" class="container main container-shadow">
      <div class="row">
        <div id="slider-slick">
          {#index.banners}
            <div class="slide hidden">
              <a href="{videoUrl}">
                <img data-lazy="{imageUrl}" alt="{imageAlt}" class="img-responsive"/>
              </a>
              <a href="{videoUrl}" class="btn btn-primary">Watch now</a>
            </div>
          {/index.banners}
        </div>
      </div>
      <div class="row" id="slider-description-row">
        <div id="slider-description-slick">
            {#index.banners}
              <div class="col-md-12">
                <div class="slide-description">
                  <h2>{name}</h2>
                  <p>{description}</p>
                </div>
              </div>
            {/index.banners}
        </div>
        <div class="text-center arrow">
          <a href="#">
            <span class="glyphicon glyphicon-chevron-down"></span>
          </a>
        </div>
      </div>

      {> "app.views.view.partial.home-video" title="Featured Videos" videos="featuredVideos"/}
      <hr/>
      {> "app.views.view.partial.home-video" title="Recent Videos" videos="recentVideos"/}
      <hr/>
      {> "app.views.view.partial.home-video" title="Trending Videos" videos="trendingVideos"/}
      <br/>
      <br/>
    </div>
    <!-- END:Main Container -->

    {> "app.views.view.partial.footer" /}

    {> "app.views.view.partial.cdn-js" /}
    {> "app.views.view.partial.js" /}

    <script type="text/javascript" src="//cdn.jsdelivr.net/jquery.slick/1.5.9/slick.min.js"></script>

    <script>
        $(function () {
          Home.initialize();
        });
    </script>
  </body>
    
</html>
