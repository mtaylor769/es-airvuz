<!DOCTYPE html>
<html view="app.views.view.template.index">
  <head>
        <meta http-equiv="Cache-control" content="public">

        <title>{index.head.title}</title>

        <!-- BEGIN: OG -->
        <meta property="og:url" content="{index.head.og.url}"/>
        <meta property="og:type" content="{index.head.og.type}" >
        <meta property="og:title" content="{index.head.og.title}" >
        <meta property="og:updated_time" content="{index.head.og.updated_time}">
        <meta property="og:description" content="{index.head.og.description}" >
        <meta property="og:image" content="{index.head.og.image}" >
        <meta property="fb:app_id" content="{index.fb.app_id}">
        <!-- END: OG -->

        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="icon" href="/client/favicon.ico" type="image/x-icon">
        <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/jquery.slick/1.5.9/slick.css"/>
        <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/jquery.slick/1.5.9/slick-theme.css"/>

        {> "app.views.view.partial.css" /}
  </head>
  <body>
  
    {> "app.views.view.partial.header" /}

    <!-- BEG:Main Container -->
    <div id="home-page" class="container main container-shadow">
      {?index.slider}
      <div class="row">
        <div id="slider-slick">
          {#index.slider.slides}
            <div class="slide hidden">
              <a href="/videoPlayer/{video._id}">
                <img data-lazy="//s3-us-west-2.amazonaws.com/airvuz-asset-beta/slide/{imagePath}" alt="{imageAlt}" class="img-responsive"/>
              </a>
              <a href="/videoPlayer/{video._id}" class="btn btn-default">Watch now</a>
            </div>
          {/index.slider.slides}
        </div>
      </div>
      <div class="row" id="slider-description-row">
        <div id="slider-description-slick">
            {#index.slider.slides}
              <div class="col-md-12">
                <h3>{name}</h3>
                By <a href="/userProfile/{video.userId.userName}">{video.userId.userName}</a>
                <div class="slide-description">
                    {description}
                </div>
                <hr/>
              </div>
            {/index.slider.slides}
        </div>

        <div class="text-center arrow invisible">
          <a href="#" class="btn btn-link">
            <span class="glyphicon glyphicon-chevron-down fa-rotate-180"></span>
          </a>
        </div>
      </div>
      {/index.slider}
      {> "app.views.view.partial.home-video" title="Featured Videos" videos="featuredVideos" viewAll="Featured%20Videos"/}
      <hr/>
      {> "app.views.view.partial.home-video" title="Recent Videos" videos="recentVideos" viewAll="Recent%20Videos"/}
      <hr/>
      {> "app.views.view.partial.home-video" title="Trending Videos" videos="trendingVideos" viewAll="Trending%20Videos"/}
      <hr/>
      {> "app.views.view.partial.home-video" title="Staff Pick Videos" videos="staffPickVideos" viewAll="Staff%20Pick%20Videos"/}
      <br/>
      <br/>
    </div>
    <!-- END:Main Container -->

    {> "app.views.view.partial.footer" /}

    {> "app.views.view.partial.cdn-js" /}
    {> "app.views.view.partial.js" /}

    <script type="text/javascript" src="//cdn.jsdelivr.net/jquery.slick/1.5.9/slick.min.js"></script>

    <script>
        $(function () {
          Home.initialize();
        });
    </script>
  </body>
    
</html>
