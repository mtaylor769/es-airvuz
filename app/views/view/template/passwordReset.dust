<!DOCTYPE html>
<html view="app.views.view.template.passwordReset">
    <head>
        <meta http-equiv="Cache-control" content="public">
        <title>Password Reset</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="icon" href="/client/favicon.ico" type="image/x-icon">
        <link rel="stylesheet" href="{script.css}">
    </head>
    <body>
        {> "app.views.view.partial.header" /}
        <div id="password-reset-page">
            <div class="container main">
                <div class="row">
                    <div class="col-md-6 col-md-offset-3">
                        <h2 class="text-center">Password reset</h2>
                        <form class="form-horizontal">
                            <div class="form-group">
                                <label for="password" class="col-sm-4 control-label">New password</label>
                                <div class="col-sm-8">
                                    <input type="password" class="form-control" id="password" placeholder="New password">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="password-confirm" class="col-sm-4 control-label">Confirm new password</label>
                                <div class="col-sm-8">
                                    <input type="password" class="form-control" id="password-confirm" placeholder="Confirm new password">
                                </div>
                            </div>
                            <div class="text-message text-danger text-center hidden"></div>
                            <div class="text-message text-success text-center hidden"></div>
                            <div class="text-right">
                                <button class="btn btn-primary" id="btn-reset">Reset</button>
                            </div>
                        </form>
                        <br>
                        <br>
                    </div>
                </div>
            </div>
        </div>

        {> "app.views.view.partial.footer" /}
        <script>
          window.page = 'password-reset';
          window.pageParams = '{code}';
        </script>
        {> "app.views.view.partial.js" /}
    </body>
</html>
