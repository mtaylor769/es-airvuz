<!DOCTYPE html>
<html view="app.views.view.template.videoUpload">
    <head>
        <meta http-equiv="Cache-control" content="public">
        <title>{title}</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="icon" href="/client/favicon.ico" type="image/x-icon">
        {>  "app.views.view.partial.css" /}
    </head>
    <body>
        {> "app.views.view.partial.header" /}

        <div id="search-page" class="container main">
            {!
            <div class="row m-t-20">
                <div class="col-md-12">
                    <form class="form-inline">
                        <input type="text" class="form-control m-r-20">
                        <div class="btn btn-primary">Search</div>
                    </form>
                </div>
            </div>
            <div class="row m-t-20">
                <div class="col-md-12">
                    <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#filter" aria-expanded="false" aria-controls="filter">
                        Filters
                    </button>
                    <div class="collapse m-t-20" id="filter">
                        Filters...
                        <hr>
                    </div>
                </div>
            </div>
            !}
            <div class="row">
                <div class="col-md-6">
                  <h3>Search: {searchKeyWord}</h3>
                </div>
                <div class="col-md-6">
                    <div class="text-right m-t-20 m-r-10">
                        About {totalVideo} results
                    </div>
                </div>
            </div>
            <div class="row" id="videos">
                <div class="col-md-12">
                    {#videos}
                        <div class="col-md-3 col-sm-6">
                            <div class="video">
                                <div class="text-center">
                                    <a href="/videoPlayer/{_id}">
                                        <img src="{s3Bucket}{thumbnailPath}" alt="{title}" class="img-responsive"/>
                                    </a>
                                </div>
                                <div class="video-bottom">
                                    <p><span class="airvuz-blue">VUZ</span> {viewCount} | {uploadDate} <span class="pull-right">{duration}</span></p>
                                    <div class="title">
                                        <h4>
                                            <a href="/videoPlayer/{_id}">{title}</a>
                                        </h4>
                                        {#userId.userNameDisplay}
                                        <p>By <a href="/user/{userId.userNameUrl}">{userId.userNameDisplay}</a></p>
                                        {:else}
                                        <p>By <a href="/user/{userId._id}">{userId._id}</a></p>
                                        {/userId.userNameDisplay}
                                    </div>
                                    <a href="/category/{categories[0].categoryTypeUrl}">{categories[0].name}</a>
                                </div>
                            </div>
                        </div>
                    {/videos}
                </div>
            </div>
            {#showPaging}
            <div class="row">
                <div class="col-md-12">
                    <nav class="text-center">
                        <ul class="pagination">
                            <li>
                                <a href="#" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>

                            {#pages}
                                <li class="{#isActive}active{/isActive}">
                                  <a href="/search?q={searchKeyWord}&page={page}">{page}</a>
                                </li>
                            {/pages}
                            <li>
                                <a href="#" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
            {/showPaging}
        </div>

        {> "app.views.view.partial.footer" /}
        {> "app.views.view.partial.cdn-js" /}
        {> "app.views.view.partial.js" /}
        <script>
          $(function () {
              Search.initialize();
          });
        </script>
    </body>

</html>
