<!DOCTYPE html>
<html view="app.views.view.template.videoUpload">
    <head>
        <meta http-equiv="Cache-control" content="public">
        <title>{title}</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="icon" href="/client/favicon.ico" type="image/x-icon">
        <link rel="stylesheet" href="{script.css}">
    </head>
    <body>
        {> "app.views.view.partial.header" /}

        <div id="search-page" class="container main">
            {!
            <div class="row m-t-20">
                <div class="col-md-12">
                    <form class="form-inline">
                        <input type="text" class="form-control m-r-20">
                        <div class="btn btn-primary">Search</div>
                    </form>
                </div>
            </div>
            <div class="row m-t-20">
                <div class="col-md-12">
                    <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#filter" aria-expanded="false" aria-controls="filter">
                        Filters
                    </button>
                    <div class="collapse m-t-20" id="filter">
                        Filters...
                        <hr>
                    </div>
                </div>
            </div>
            !}
            <div class="row">
                <div class="col-md-6">
                  <h3>Search: {searchKeyWord}</h3>
                </div>
                <div class="col-md-6">
                    <div class="text-right m-t-20 m-r-10">
                        About {totalVideo} results
                    </div>
                </div>
            </div>
            <div class="row" id="videos">
                <div class="col-md-12">
                    {> "client.templates.core.video-display"/}
                </div>
            </div>
            {#showLoadMore}
            <div class="row">
                <div class="col-md-12 m-b-20">
                    <hr/>
                    <div class="text-center">
                        <button class="btn btn-primary" id="load-more-btn">Load more videos</button>
                    </div>
                </div>
            </div>
            {/showLoadMore}
        </div>

        {> "app.views.view.partial.footer" /}
        <script>
          window.page = 'search';
        </script>
        {> "app.views.view.partial.js" /}
    </body>
</html>